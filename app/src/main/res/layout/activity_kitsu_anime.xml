<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/kitsu_detail_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kitsu_detail_image_view"
                app:layout_constraintTop_toTopOf="@+id/kitsu_detail_image_view" />

            <Button
                android:id="@+id/kitsu_detail_watch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="WATCH"
                app:layout_constraintBottom_toBottomOf="@+id/kitsu_detail_image_view"
                app:layout_constraintStart_toStartOf="@+id/kitsu_detail_rating_view"
                app:layout_constraintTop_toBottomOf="@+id/kitsu_detail_status_view"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/kitsu_detail_image_view"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kitsu_detail_description_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/kitsu_detail_image_view"
                app:layout_constraintTop_toBottomOf="@+id/kitsu_detail_image_view" />

            <TextView
                android:id="@+id/kitsu_detail_episodes_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/kitsu_detail_progress_view"
                app:layout_constraintTop_toTopOf="@+id/kitsu_detail_progress_view" />

            <TextView
                android:id="@+id/kitsu_detail_rating_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/kitsu_detail_progress_view"
                app:layout_constraintTop_toBottomOf="@+id/kitsu_detail_progress_view" />

            <TextView
                android:id="@+id/kitsu_detail_status_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:textAllCaps="true"
                app:layout_constraintStart_toEndOf="@+id/kitsu_detail_rating_view"
                app:layout_constraintTop_toTopOf="@+id/kitsu_detail_rating_view" />

            <EditText
                android:id="@+id/kitsu_detail_progress_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/kitsu_detail_text_view"
                app:layout_constraintTop_toBottomOf="@+id/kitsu_detail_text_view" />

            <Button
                android:id="@+id/kitsu_detail_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="UPDATE"
                app:layout_constraintStart_toEndOf="@+id/kitsu_detail_watch_button"
                app:layout_constraintTop_toTopOf="@+id/kitsu_detail_watch_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>